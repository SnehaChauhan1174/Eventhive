<% layout('/layouts/boilerplate.ejs') %>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: 100vh;
    background: url("<%= event.image %>") center/cover no-repeat;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .content {
    z-index: 1;
    padding: 2rem;
    background-color: rgba(0, 0, 0, 0.4); /* Soft black translucent bg for readability */
    border-radius: 10px;
    max-width: 800px;
    backdrop-filter: blur(2px);
  }

  .content h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .content p,
  .content li {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    list-style: none;
  }

  .show-btns {
    margin-top: 1.5rem;
  }

  .show-btns a,
  .show-btns button {
    margin: 0 0.5rem;
  }
</style>

<div class="hero">
  <div class="content">
    <h1><%= event.title %></h1>
    <p><%= event.description %></p>
    <p><%= event.date %></p>
    <p><%= event.time %></p>
    <p><%= event.location %></p>
    <p><%= event.category %></p>
    <p>&#8377;<%= event.price.toLocaleString('en-IN') %></p>
    <p>Attendees: <%= event.attendeeCount %></p>

    <div class="show-btns">
      <a href="/events/<%= event._id %>/edit" class="btn btn-light">Edit Event</a>
      <form method="post" action="/events/<%=event._id%>?_method=Delete" style="display:inline;">
        <button class="btn btn-light">Delete Event</button>
      </form>
    </div>
  </div>
</div>
