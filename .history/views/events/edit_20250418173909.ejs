<% layout('/layouts/boilerplate.ejs') %>
<body>
    <h3>Edit your Event</h3>
    <form method="post" action="/events/<%= event._id %>?_method=put">
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="event[title]" value="<%= event.title %>" class="form-control">

    </div>
        
        
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <textarea name="event[description]" ><%= event.description %></textarea>

    </div>
        
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="event[date]" value="<%= event.date %>" type="date">
    </div>
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="event[time]" value="<%= event.time %>" type="text">
    </div>
        
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="event[category]" value="<%= event.category %>" type="text">
    </div>
        
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="event[location]" value="<%= event.location %>" type="text">
    </div>
        
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="event[image]" value="<%= event.image %>" type="text">
    </div>
        
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="event[price]" value="<%= event.price %>" type="number">
    </div>
        
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="event[attendeeCount]" value="<%= event.attendeeCount %>" type="number">
    </div>
        
        <button>Edit</button>
        
       

    </form>
</body>
